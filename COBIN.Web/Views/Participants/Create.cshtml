@model COBIN.Web.Models.ParticipantsModels
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="Form2cols">
        <thead>
            <tr>
                <th>
                    Add New Participant
                </th>
            </tr>
        </thead>
        <tr>
            <td>
                @Html.ValidationSummary(true)
                <fieldset>
                    <table>
                        <tr>
                            <td>
                                @Html.HiddenFor(model => model.Id)
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Participant_Id)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Participant_Id, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Participant_Id)
                                </div>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.First_Name)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.First_Name, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.First_Name)
                                </div>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Last_Name)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Last_Name, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Last_Name)
                                </div>
                            </td>
                            <td>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Ward_No)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Ward_No, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Ward_No)
                                </div>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Address)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Address, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Contact_Number)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Contact_Number, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Contact_Number)
                                </div>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Consent_Obtained)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.DropDownListFor(model => model.Consent_Obtained, COBIN.Web.Classes.ClsListData.YesNo)
                                    @Html.ValidationMessageFor(model => model.Consent_Obtained)
                                </div>
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
                <input name="cancel" type="button" value="Back" onclick="window.history.back()" />
            </td>
        </tr>
    </table>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CobinFunctions")
}
