@model COBIN.Web.Models.HeaderModels
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="Form2cols">
        <thead>
            <tr>
                <th>
                    Add New Survey Project
                </th>
            </tr>
        </thead>
        <tr>
            <td>
                @Html.ValidationSummary(true)
                <fieldset>
                    <table>
                        <tr>
                            <td>
                               
                                @Html.HiddenFor(model => model.HeaderId)
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Survey_Name)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(model => model.Survey_Name, 1, 40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Survey_Name)
                                </div>
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Survey_Code)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Survey_Code, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Survey_Code)
                                </div>
                                <div class="editor-label">
                                   <b> @Html.LabelFor(model => model.Survey_Instructions)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(model => model.Survey_Instructions, 1, 40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Survey_Instructions)
                                </div>
                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.MiscellaneousInfo)</b>
                                </div>
                                <div class="editor-field">

                                    @Html.TextAreaFor(model => model.MiscellaneousInfo, 5, 40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.MiscellaneousInfo)
                                </div>

                            </td>
                            
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
                <input name="cancel" type="button" value="Back" onclick="window.history.back()" />
            </td>
        </tr>
    </table>
}
