@model COBIN.Web.Models.QuestionModels
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="Form3cols">
        <thead>
            <tr>
                <th>
                    Edit Question
                </th>
            </tr>
        </thead>
        <tr>
            <td>
                @Html.ValidationSummary(true)
                <fieldset>
                    <table>
                        <tr>
                            <td>
                                @Html.HiddenFor(model => model.QuestionId)
                                @Html.HiddenFor(model => model.SectionId)
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Question_Name)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(model => model.Question_Name,3,40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Question_Name)
                                </div>
                                <div class="editor-label">
                                   <b> @Html.LabelFor(model => model.Question_Subtext)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(model => model.Question_Subtext,2,40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Question_Subtext)
                                </div>
                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.Question_Code)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Question_Code, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Question_Code)
                                </div>
                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.Measurement_Unit)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Measurement_Unit, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Measurement_Unit)
                                </div>
                            </td>
                            <td>
                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.Id_Input_Types)</b>
                                </div>
                                <div class="editor-field">
                                    
                                    @Html.DropDownListFor(model => model.Id_Input_Types, COBIN.Web.Classes.ClsListData.InputTypes)
                                    @Html.ValidationMessageFor(model => model.Id_Input_Types)
                                </div>
                          

                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.Id_Option_Categories)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.DropDownListFor(model => model.Id_Option_Categories, COBIN.Web.Classes.ClsListData.Option_Group_Name)
                                    @Html.ValidationMessageFor(model => model.Id_Option_Categories)
                                </div>
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
                <input name="cancel" type="button" value="Back" onclick="window.history.back()" />
            </td>
        </tr>
    </table>
}
@*<div>
    @Html.ActionLink("Back to List", "Index")
</div>*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CobinFunctions")
}

