@model COBIN.Web.Models.SectionModels
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="Form3cols">
        <thead>
            <tr>
                <th>
                    Edit Section
                </th>
            </tr>
        </thead>
        <tr>
            <td>
                @Html.ValidationSummary(true)
                <fieldset>
                    <table>
                        <tr>
                            <td>
                                @Html.HiddenFor(model => model.SectionId)
                                @Html.HiddenFor(model => model.HeaderId)
                                <div class="editor-label">
                                    <b>@Html.LabelFor(model => model.Section_Name)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(model => model.Section_Name, 1, 40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Section_Name)
                                </div>
                                <div class="editor-label">
                                   <b> @Html.LabelFor(model => model.Section_Title)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextAreaFor(model => model.Section_Title, 1, 40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Section_Title)
                                </div>
                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.Section_Instructions)</b>
                                </div>
                                <div class="editor-field">

                                    @Html.TextAreaFor(model => model.Section_Instructions, 5, 40, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Section_Instructions)
                                </div>
@*                                <div class="editor-label">
                                  <b>  @Html.LabelFor(model => model.Is_Required_Section)</b>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Is_Required_Section, new { autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Is_Required_Section)
                                </div>*@
                            </td>
                            
                        </tr>
                    </table>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
                <input name="cancel" type="button" value="Back" onclick="window.history.back()" />
            </td>
        </tr>
    </table>
}
